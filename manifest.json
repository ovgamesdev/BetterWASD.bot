{
  "background": {
    "persistent": true,
    "scripts": [
      "lib/moment/moment.min.js",
      "lib/moment/locales.js",
      "lib/moment/moment-with-locales.js",
      "lib/linkify/linkify.min.js",
      "lib/linkify/linkify-html.min.js",
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "48": "img/noactive48.png"
    },
    "default_popup": "popup.html",
    "default_title": "BetterWASD.bot"
  },
  "description": "Бот для wasd.tv",
  "icons": {
    "128": "img/icon128.png",
    "48": "img/icon48.png",
    "16": "img/icon16.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "41",
  "name": "BetterWASD - bot",
  "permissions": ["storage", "https://wasd.tv/*"],
  "version": "1.0.8",
  "web_accessible_resources": ["img/*.png", "backup.html", "css/fonts/*"]
}
