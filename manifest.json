{
   "background": {
      "persistent": true,
      "scripts": ["background.js"]
   },
   "browser_action": {
      "default_icon": {
         "16": "img/icon16.png",
         "48": "img/icon48.png"
      },
      "default_popup": "popup.html",
      "default_title": "BetterWASD.bot"
   },
   "description": "Бот для wasd.tv",
   "icons": {
        "128": "img/icon128.png",
        "16": "img/icon16.png",
        "48": "img/icon48.png"
   },
   "manifest_version": 2,
   "minimum_chrome_version": "41",
   "name": "BetterWASD - bot",
   "permissions": ["tabs", "storage", "https://wasd.tv/*"],
   "version": "1.0.3.1",
   "web_accessible_resources": ["img/*.png"]
}
